        <script>
            $(document).ready(function() {
                var table = $('#statementtable')[0]; // Assuming the table id is 'statementtable'
                var fromDate;
                $('#start-date').on('change', function () {
                    fromDate = new Date($(this).val());
                    $('#end-date').prop('min', function () {
                        return fromDate.toISOString().split('T')[0];
                    });
                    filterTransactions();
                });
          
                var toDate;
                $('#end-date').on('change', function () {
                    toDate = new Date($(this).val());
                    $('#start-date').prop('max', function () {
                        return toDate.toISOString().split('T')[0];
                    });
                    filterTransactions();
                });
          
                function filterTransactions() {
                    var startDate = fromDate;
                    var endDate = toDate;
                    var rows = table.rows;
          
                    for (var i = 1; i < rows.length; i++) { // Start from index 1 to skip the header row
                        var row = rows[i];
                        var dateCell = row.cells[1]; // Assuming date is in the second column
                        var rowDate = new Date(dateCell.textContent);
          
                        if (rowDate >= startDate && rowDate <= endDate) {
                            $(row).show();
                            alert("inside if");
                        } else {
                            $(row).hide();
                            alert("inside if");
                        }
                      
                    }
          
                    var options = { year: 'numeric', month: 'long', day: 'numeric' };
          
                    if (fromDate) {
                        $('#d1').text(fromDate.toLocaleDateString(undefined, options));
                    }
          
                    if (toDate) {
                        $('#d2').text(" To " + toDate.toLocaleDateString(undefined, options));
                    }
                }
            });
          </script>


<script>
    var table = document.getElementById("statementtable");

    var fromDate;
    $('#start-date').on('change', function () {
        fromDate = $(this).val();
        $('#end-date').prop('min', function () {
            return fromDate
        })
        var startDate = new Date(document.getElementById("start-date").value);
        // var endDate = new Date(document.getElementById("in2").value);
        var rows = table.getElementsByTagName("tr");
console.log('date1',startDate)
        for (var i = 1; i <= rows.length; i++) {
            var row = rows[i];
            var dateCell = row.cells[3];
            console.log('date3', dateCell)

            var rowDate = new Date(dateCell.textContent);
            console.log('date2',rowDate)

            if (rowDate >= startDate) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        }
        var tdate = new Date(fromDate)
        var options = { year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById("d1").innerHTML = tdate.toLocaleDateString(undefined, options);
        
    })
    var toDate;
    $('#end-date').on('change', function () {
        toDate = $(this).val();
        $('#start-date').prop('max', function () {
            return toDate
        })
        var startDate = new Date(document.getElementById("start-date").value);
        var endDate = new Date(document.getElementById("end-date").value);
        var rows = table.getElementsByTagName("tr");
        for (var i = 1; i <= rows.length; i++) {
            var row = rows[i];
            var dateCell = row.cells[3];
            var rowDate = new Date(dateCell.textContent);

            if (rowDate <= endDate && rowDate >= startDate) {
                row.style.display = "";
                console.log("display");
            } else {
                row.style.display = "none";

            }
        }
        var tdate = new Date(toDate)
        var options = { year: 'numeric', month: 'long', day: 'numeric' };
        document.getElementById("d2").innerHTML = "  To  " + tdate.toLocaleDateString(undefined, options);
    })


</script>




<script>
    $(document).ready(function() {
        $('#filter-button').click(function() {
            var startDate = new Date($('#start-date').val());
            var endDate = new Date($('#end-date').val());
  
            // Perform filtering
            $('.table tbody tr').each(function() {
                var dateStr = $(this).find('td:nth-child(2)').text(); // Assuming date is in the second column
                var rowDate = new Date(dateStr);
                
                // Check if the row date is within the range
                if (rowDate >= startDate && rowDate <= endDate) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
  </script>